<div class="group">
  <%= render 'shared/menu', title: 'Groups' %>
  <div class="group__container">
    <% @groups.each do |g| %>
      <div class="group__detail">
        <div class="group__right">
          <span>
            <%= g.name %>
          </span>
          <span>
            <%= g.created_at.strftime("%Y %B %d") %>
          </span>
        </div>
        <%= link_to group_path(g), class: "group__image" do %>
          <%= image_tag g.icon.url if g.icon? %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="group__button-container">
    <%= link_to 'Create new Group', new_group_path, class: 'button btn-green group__create' %>
  </div>
</div>
