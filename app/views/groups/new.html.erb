<%= javascript_pack_tag 'script' %>
<div class="login">
  <div class="login__header">
    <%= link_to groups_path do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <h2>Groups</h2>
    <span>Groups</span>
  </div>

  <div class="form">
    <%= simple_form_for @group, validate: false, html: { multipart: true }  do |f| %>
      <div class="form__input">
        <%= f.input :name, placeholder: 'Group name', label: false, input_html: { class: 'form__input--field' } %>
      </div>

      <div class="form__input__file">
        <%= f.file_field :icon, placeholder: 'Select your icon', label: false, input_html: { class: 'form__input--field' } %>
      </div>

      <div class="form__input">
        <%= f.submit "Create", class: "button btn-blue" %>
      </div>
    <% end %>
  </div>
</div>