<%= javascript_pack_tag 'script' %>
<div class="purchase">
  <%= render 'shared/menu', title: 'Transactions' %>
  <%= render 'shared/navigation_desktop' %>
  <div class="purchase__total">
    <span>
      Total Amount:
    </span>
    <span>
      $ <%= @total %>.00
    </span>
  </div>
  <%= render 'shared/messages' %>
  <div class="purchase__container">
    <%= render @purchases %>
  </div>
  <div class="purchase__button-container">
    <%= link_to 'Register new Purchase', new_purchase_path, class: 'button btn-green purchase__create' %>
  </div>
</div>