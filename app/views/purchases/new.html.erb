<%= javascript_pack_tag 'script' %>
<div class="login">
  <div class="login__header">
    <%= link_to purchases_path do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <h2>Transaction</h2>
    <span>Transaction</span>
  </div>

  <div class="form">
    <%= simple_form_for @purchase do |f| %>
      <div class="form__input">
        <%= f.input :name, placeholder: 'Transaction concept', label: false, input_html: { class: 'form__input--field' } %>
      </div>

      <div class="form__input">
        <%= f.number_field :amount, placeholder: 'Amount', label: false, class: 'form__input--number' %>
      </div>

      <div class="form__input__select">
        <%= f.input :group_id, :collection => Group.all, :value_method => :id, :label => "Select a Group" ,:include_blank => false %>
      </div>

      <div class="form__input">
        <%= f.submit "Create", class: "button btn-blue" %>
      </div>
    <% end %>
  </div>
</div>